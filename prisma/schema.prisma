generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model News {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String?
  content     String?
  url         String   @unique
  source      String
  category    String
  subcategory String?
  author      String?
  language    String   
  region      String?  
  publishedAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([publishedAt])
  @@index([category])
  @@index([language])
  @@index([region])
  @@index([slug])
}
